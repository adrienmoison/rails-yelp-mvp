<div class="container padded">
  <h1 class="text-center">New restaurant</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for @restaurant do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <%= f.input :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :phone_number, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :category, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :review, class: "form-control" %>
        </div>
        <%= f.submit "Create a restaurant", class: "btn btn-primary" %>
        <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
