<div class="container padded">
  <h1 class="text-center">New review</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <%= f.input :content, class: "form-control" %>
          <%= f.input :rating, class: "form-control" %>
        </div>
        <%= f.submit "Add a review", class: "btn btn-primary" %>
        <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
